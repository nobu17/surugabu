<%= form_with(model: category, url: "/admin/category/#{category.id}" , local: true) do |form| %>
<% if category.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(category.errors.count, "error") %>：入力に問題があります。</h2>
    <ul>
        <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :display_order %>
    <%= form.text_field :display_order %>
</div>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>