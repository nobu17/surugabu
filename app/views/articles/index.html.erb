<% if !@area.nil? || !@category.nil? %>
<% set_meta_tags noindex: true %>
<div class="row">
    <h4 class="ml-3 col-md-12" style="border-bottom: 1px solid #c85179;border-left: 10px solid #c85179;padding: 7px;">
        [
        <% if !@area.nil? %>
        <%= @area.name %>
        <% end %>
        <% if !@category.nil? %>
        <%= @category.name %>
        <% end %>
        ] の記事
    </h4>
</div>
<% elsif @page > 1 %>
<% set_meta_tags noindex: true %>
<% end %>

<!-- selection tab -->
<div class="row">
    <nav>
        <div class="col-md-12 tab" style="margin-bottom: 22px;">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#nav-home" aria-selected="true">投稿一覧</a>
                </li>
                <li class="nav-item" id="map-li">
                    <a class="nav-link" id="map-tab" data-toggle="tab" href="#nav-map" aria-selected="false">地図で探す</a>
                </li>
            </ul>
        </div>
    </nav>
</div>

<div class=" tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home">
        <!-- post all tab -->
        <div class=" row">
            <% @articles.each_with_index do |ar, i| %>
            <!-- post -->
            <div class="col-md-4">
                <%= render partial: "articles/article-panel", locals: { article: ar} %>
            </div>
            <!-- /post -->
            <% end %>
        </div>

        <div class="mx-auto" style="width: 300px;">
            <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, :previous_label => ' &lt', :next_label => '&gt', inner_window: 2, outer_window: 1) %>
        </div>
    </div>

    <!-- map tab -->
    <div class="tab-pane fade" id="nav-map">
        <%= render partial: "layouts/map" %>
    </div>
</div>