<% if !@area.nil? || !@category.nil? %>
<div class="row">
    <h4 class="ml-3 col-md-12" style="border-bottom: 1px solid #c85179;border-left: 10px solid #c85179;padding: 7px;">
        [
        <% if !@area.nil? %>
        <%= @area.name %>
        <% end %>
        <% if !@category.nil? %>
        <%= @category.name %>
        <% end %>
        ] の記事
    </h4>
</div>
<% end %>

<!-- row -->
<div class="row">
    <div class="col-md-12">
        <div class="section-title">
            <h2>最新の投稿</h2>
        </div>
    </div>

    <% @articles.each_with_index do |ar, i| %>
    <!-- post -->
    <div class="col-md-4">
        <div class="post">
            <%= link_to "/articles/#{ar.id}", { class: "post-img" } do %>
            <%= image_tag_with_default ar.title_image_compressed, {} %>
            <% end %>
            <div class="post-body">
                <div class="post-meta">
                    <!-- area badge -->
                    <% ar.areas.each do |area| %>
                    <%= link_to "/articles/pages/1?area=#{area.id}", { class: "post-category cat-1" } do %>
                    <%= area.name %>
                    <% end %>
                    <% end %>
                    <!-- category badge -->
                    <% ar.categorys.each do |category| %>
                    <%= link_to "/articles/pages/1?category=#{category.id}", { class: "post-category cat-2" } do %>
                    <%= category.name %>
                    <% end %>
                    <% end %>

                    <span class="post-date"><%= ar.created_at.strftime("%Y/%m/%d") %></span>
                </div>
                <h3 class="post-title">
                    <%= link_to "/articles/#{ar.id}" do %>
                    <%= ar.title %>
                    <p><%= ar.sub_title %></p>
                    <% end %>
                </h3>
            </div>
        </div>
    </div>
    <!-- /post -->
    <% end %>
</div>

<div class="mx-auto" style="width: 300px;">
    <%= will_paginate(@articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, :previous_label => ' &lt 前へ', :next_label => '次へ &gt') %>
</div>